/* payment.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 倒计时部分 */
.countdown-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.countdown-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.countdown-time {
  font-size: 48rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 20rpx;
  font-family: monospace;
}

.countdown-tip {
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */
.order-info {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  margin-bottom: 30rpx;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.value.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* 支付方式 */
.payment-methods {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.method-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.method-item.selected {
  border-color: #07c160;
  background-color: #f0f9ff;
}

.method-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
}

.method-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.method-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.method-desc {
  font-size: 24rpx;
  color: #999;
}

.method-check {
  display: flex;
  align-items: center;
}

/* 支付按钮 */
.payment-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.pay-btn {
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 50rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.pay-btn:active {
  opacity: 0.8;
}

.cancel-btn {
  background-color: white;
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 50rpx;
  height: 80rpx;
  font-size: 28rpx;
}

.cancel-btn:active {
  background-color: #f5f5f5;
}

/* 底部提示 */
.bottom-tips {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #999;
} 