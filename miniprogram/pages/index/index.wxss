/**index.wxss**/
.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

/* 功能导航 */
.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
}

.nav-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #232946;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.error-buttons {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.retry-btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.diagnose-btn {
  background: #ff9500;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.fix-btn {
  background: #34c759;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 内容区域 */
.section {
  background: white;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #007aff;
}

/* 分类导航 */
.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 10rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  min-width: 120rpx;
}

.category-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 公告列表 */
.announcement-list {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 10rpx;
}

.announcement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background: white;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.announcement-item:last-child {
  margin-bottom: 0;
}

.announcement-icon {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.announcement-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.announcement-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.announcement-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announcement-time {
  font-size: 24rpx;
  color: #999;
}

.announcement-arrow {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 10rpx;
}

/* 商品网格 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.product-image {
  width: 100%;
  height: 200rpx;
}

/* 默认图片样式 */
.default-image {
  width: 100%;
  height: 200rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 22rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

/* 公告列表 */
.notice-list {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.notice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

/* 停车信息 */
.parking-info {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.parking-status {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.parking-status.parking {
  background: #ff4757;
  color: white;
}

.parking-status.not-parking {
  background: #2ed573;
  color: white;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
}

.parking-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.parking-time,
.parking-fee {
  font-size: 24rpx;
  color: #666;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .nav-grid {
    flex-wrap: wrap;
  }
  
  .nav-item {
    flex-basis: 50%;
    margin-bottom: 20rpx;
  }
  
  .status-info {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
}

.member-card {
  background: linear-gradient(120deg, #232946 0%, #3b3f5c 100%);
  border-radius: 28rpx;
  margin: 24rpx 24rpx 0 24rpx;
  padding: 32rpx 28rpx 28rpx 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 84, 0.18);
  color: #fff;
  position: relative;
  margin-bottom: 40rpx;
}

.member-info {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 12rpx #2224;
  margin-right: 24rpx;
  background: #fff;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-weight: bold;
  font-size: 34rpx;
  color: #fff;
  margin-bottom: 4rpx;
}

.phone {
  font-size: 24rpx;
  color: #e0e0e0;
  margin-bottom: 2rpx;
}

.level-badge {
  display: inline-block;
  background: linear-gradient(90deg, #ffd700 0%, #ffb300 100%);
  color: #232946;
  font-weight: bold;
  font-size: 22rpx;
  border-radius: 20rpx;
  padding: 4rpx 18rpx;
  margin-top: 16rpx;
  box-shadow: 0 2rpx 8rpx #ffd70044;
}

.level-info-btn {
  position: absolute;
  top: 18rpx;
  right: -90rpx;
  font-size: 24rpx;
  color: #ffd700;
  background: none;
  border: none;
  z-index: 2;
  padding: 0 12rpx;
}

.member-progress {
  margin-bottom: 18rpx;
}

.progress-bar-bg {
  width: 100%;
  height: 18rpx;
  background: #2e3250;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 8rpx 0;
  position: relative;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #ffd700 0%, #ffb300 100%);
  border-radius: 12rpx;
  transition: width 0.4s;
}

.progress-text {
  font-size: 22rpx;
  color: #ffd700;
  font-weight: bold;
  margin-left: 16rpx;
  position: static;
}

.task-btn {
  width: 100%;
  background: linear-gradient(90deg, #ff9800, #ffd700);
  color: #232946;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 18rpx 0;
  margin-top: 12rpx;
  box-shadow: 0 4rpx 16rpx #ffd70044;
}

.level-badge.mini {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  margin-top: 0;
  margin-left: 8rpx;
  height: 24rpx;
  line-height: 24rpx;
  box-shadow: none;
}

.progress-level {
  font-size: 20rpx;
  color: #ffd700;
  font-weight: bold;
  width: 48rpx;
  text-align: center;
}

.member-benefit-section {
  background: #fff;
  border-radius: 20rpx;
  margin: 32rpx 24rpx 0 24rpx;
  box-shadow: 0 4rpx 24rpx #eee;
  padding: 24rpx 0 0 0;
}

.benefit-header {
  background: linear-gradient(120deg, #23262f 0%, #3a3d4d 100%);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 28rpx 32rpx 18rpx 32rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.benefit-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 40rpx;
}

.benefit-desc {
  font-size: 22rpx;
  color: #fff;
  margin-left: 0;
}

.benefit-list {
  padding: 0 24rpx 24rpx 24rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx #f5f5f5;
  margin-top: 24rpx;
  padding: 18rpx 16rpx;
  flex-direction: row;
}

.benefit-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  margin-right: 18rpx;
  background: #f7f7f7;
}

.benefit-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.benefit-main {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.benefit-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #232946;
  margin-right: 12rpx;
}

.benefit-tag {
  font-size: 20rpx;
  color: #fff;
  background: #ffd700;
  border-radius: 12rpx;
  padding: 2rpx 12rpx;
  margin-left: 4rpx;
}

.benefit-rule {
  font-size: 20rpx;
  color: #b8862a;
  background: #fdf6e3;
  border-radius: 8rpx;
  padding: 4rpx 10rpx;
  margin-top: 2rpx;
  display: inline-block;
}

.benefit-btn-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
  margin-left: 12rpx;
  padding-left: 70px;
}

.benefit-btn {
  background: linear-gradient(90deg, #ffeb3b, #ffd700);
  color: #232946;
  border: none;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 10rpx 28rpx;
  align-self: flex-end;
  margin-left: 0;
  margin-right: 0;
}

/* 增加会员权益板块与热门商品间距 */
.member-benefit-section + view[style] {
  height: 40rpx !important;
} 