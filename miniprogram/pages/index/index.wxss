/**index.wxss**/
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
}

.banner-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #3cc51f 0%, #2ecc71 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.banner-text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 0 40rpx;
  word-wrap: break-word;
}

/* 功能导航 */
.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  min-width: 0;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  flex-shrink: 0;
}

.nav-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

/* 内容区域 */
.section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  word-wrap: break-word;
}

.section-more {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
  white-space: nowrap;
}

/* 商品滚动 */
.product-scroll {
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
}

.product-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  vertical-align: top;
}

.product-item:last-child {
  margin-right: 0;
}

.product-item .product-image {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.product-image-text {
  color: white;
  font-size: 24rpx;
  text-align: center;
  padding: 20rpx;
  word-wrap: break-word;
}

.product-item .product-info {
  padding: 20rpx;
  box-sizing: border-box;
}

.product-item .product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.product-item .product-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

/* 公告列表 */
.notice-list {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.notice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 停车状态 */
.parking-status {
  background-color: #e8f5e8;
  border: 1rpx solid #3cc51f;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  word-wrap: break-word;
}

.status-time {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.status-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.plate-number, .parking-fee {
  font-size: 28rpx;
  color: #333;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.parking-fee {
  color: #e74c3c;
  font-weight: bold;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .nav-grid {
    flex-wrap: wrap;
  }
  
  .nav-item {
    flex-basis: 50%;
    margin-bottom: 20rpx;
  }
  
  .status-info {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
} 