/**index.wxss**/
.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

/* 功能导航 */
.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 内容区域 */
.section {
  background: white;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #007aff;
}

/* 分类导航 */
.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 10rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  min-width: 120rpx;
}

.category-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 商品网格 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.product-image {
  width: 100%;
  height: 200rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

/* 公告列表 */
.notice-list {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.notice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

/* 停车信息 */
.parking-info {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.parking-status {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.parking-status.parking {
  background: #ff4757;
  color: white;
}

.parking-status.not-parking {
  background: #2ed573;
  color: white;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
}

.parking-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.parking-time,
.parking-fee {
  font-size: 24rpx;
  color: #666;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .nav-grid {
    flex-wrap: wrap;
  }
  
  .nav-item {
    flex-basis: 50%;
    margin-bottom: 20rpx;
  }
  
  .status-info {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
} 