/**mall.wxss**/
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx 0 20rpx;
  background: #fff;
}

.search-input {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #eee;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.search-input::-webkit-input-placeholder {
  line-height: 60rpx;
  color: #bbb;
}
.search-input::-moz-placeholder {
  line-height: 60rpx;
  color: #bbb;
}
.search-input:-ms-input-placeholder {
  line-height: 60rpx;
  color: #bbb;
}
.search-input::placeholder {
  line-height: 60rpx;
  color: #bbb;
}

.search-btn {
  margin-left: 20rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #ff5000;
  color: #fff;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 60rpx;
  box-sizing: border-box;
}

.category-filter {
  background: #fff;
  padding: 10rpx 0 10rpx 0;
  margin-bottom: 10rpx;
}

/* 分类滚动区域 */
.category-scroll {
  white-space: nowrap;
  overflow-x: auto;
}

/* 隐藏滚动条 - 更有效的方法 */
.category-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* 分类列表 */
.category-list {
  display: flex;
  padding: 10rpx 0; /* 减少上下间距 */
}

/* 分类项 */
.category-item {
  padding: 8rpx 25rpx; /* 减少内边距 */
  margin-right: 20rpx;
  border-radius: 30rpx;
  background: #f7f7f7;
  color: #333;
  font-size: 26rpx;
  height: 55rpx; /* 调整为当前高度的三分之二左右 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-item.active {
  background: #ff5000;
  color: #fff;
}

/* 分类图片 */
.category-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

/* 分类名称 */
.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.product-list {
  width: 100vw;
  padding: 0 10rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  margin-bottom: 16rpx;
  overflow: hidden;
  padding: 0 0 12rpx 0;
}

.product-image {
  width: 100%;
  height: 260rpx;
  border-radius: 16rpx 16rpx 0 0;
  object-fit: cover;
  display: block;
}

/* 默认图片样式 */
.default-image {
  width: 100%;
  height: 260rpx;
  border-radius: 16rpx 16rpx 0 0;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.product-info {
  padding: 12rpx 16rpx 0 16rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #222;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-category {
  font-size: 20rpx;
  color: #aaa;
  margin-bottom: 2rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.product-price {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
}

.product-sales {
  font-size: 20rpx;
  color: #bbb;
}

.load-more {
  text-align: center;
  margin: 30rpx 0;
}
.load-more-btn {
  background: #fff;
  color: #ff5000;
  border: 1rpx solid #ff5000;
  border-radius: 30rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
}
.no-data {
  text-align: center;
  color: #bbb;
  font-size: 28rpx;
  margin: 60rpx 0;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.search-input icon {
  margin-right: 10rpx;
  flex-shrink: 0;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  min-width: 0;
}

.cart-icon {
  position: relative;
  padding: 10rpx;
  flex-shrink: 0;
}

.cart-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #e74c3c;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 分类标签 */
.category-tabs {
  background-color: white;
  padding: 20rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
  overflow-x: auto;
}

.tab-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  white-space: nowrap;
  flex-shrink: 0;
}

.tab-item.active {
  background-color: #3cc51f;
  color: white;
}

/* 商品列表 */
.product-list {
  flex: 1;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.product-card {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.product-image {
  width: 100%;
  height: 260rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-image-text {
  color: white;
  font-size: 24rpx;
  text-align: center;
  padding: 20rpx;
  word-wrap: break-word;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.product-info {
  padding: 20rpx;
  box-sizing: border-box;
}

.product-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
}

.product-price-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.product-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
  flex: 1;
  word-wrap: break-word;
}

.product-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
  word-wrap: break-word;
}

.points-badge {
  background-color: #ff6b35;
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 加载状态 */
.loading-more, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 悬浮购物车 */
.float-cart {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #3cc51f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(60, 197, 31, 0.3);
  z-index: 1000;
}

.cart-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #e74c3c;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .product-grid {
    grid-template-columns: 1fr;
  }
  
  .search-bar {
    flex-wrap: wrap;
    gap: 10rpx;
  }
  
  .search-input {
    margin-right: 0;
    margin-bottom: 10rpx;
  }
  
  .product-footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
}

.no-image {
  width: 100%;
  height: 260rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f7f7;
  color: #bbb;
  font-size: 28rpx;
  border-radius: 16rpx 16rpx 0 0;
  box-sizing: border-box;
}

.search-placeholder {
  color: #bbb;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
} 