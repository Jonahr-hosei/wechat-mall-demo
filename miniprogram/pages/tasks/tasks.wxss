.task-card {
  background: #fff;
  border-radius: 20rpx;
  margin: 32rpx 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 24rpx #eee;
}
.task-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #232946;
}
.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.task-item {
  display: flex;
  align-items: center;
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 18rpx 16rpx;
}
.task-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 18rpx;
  background: #ffe082;
}
.task-icon.sign {
  background: linear-gradient(135deg, #ffd700 0%, #ffb300 100%);
}
.task-icon.game {
  background: linear-gradient(135deg, #90caf9 0%, #42a5f5 100%);
}
.task-info {
  flex: 1;
}
.task-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #232946;
}
.task-desc {
  font-size: 22rpx;
  color: #888;
}
.task-btn {
  background: linear-gradient(90deg, #ff9800, #ffd700);
  color: #232946;
  border: none;
  border-radius: 24rpx;
  font-size: 24rpx;
  padding: 10rpx 28rpx;
  font-weight: bold;
}
.task-btn.disabled {
  background: #e0e0e0;
  color: #aaa;
} 